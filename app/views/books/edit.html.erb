<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div class="error_explanation">
    <div class="error_quantity">
      <%= @book.errors.count %> error prohibited this book from being saved:
    </div>
    <ul class="error_message">
      <% @book.errors.full_messages.each do |message| %>
      <li>
        <%= message %>
      </li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model:@book, local:true do |f| %>
  <div>
    <div class="field">
      <%= f.label :title, 'Title' %>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :body, 'Body' %>
      <%= f.text_area :body %>
    </div>
    <div class="action">
      <%= f.submit 'Update Book' %>
    </div>
  </div>
<% end %>

<div><%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %></div>
