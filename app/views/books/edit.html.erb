<h1>Editing Book</h1>

<%= form_with model:@book, local:true do |f| %>
  <div>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.submit 'Update Book' %>
  </div>
<% end %>

<div><%= link_to "Show", book_path(@book) %>|<%= link_to "Back", books_path %></div>
